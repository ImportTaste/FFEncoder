{   //terminal settings
    "terminal.integrated.scrollback": 10000,
    
    //editor settings
    "editor.formatOnSave": false,
    "editor.tabSize": 4,
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      },

    //code spell checker extension dictionary
    "cSpell.words": [
        "AACQ",
        "Deblock",
        "Downmixing",
        "FFENCODER",
        "FLAC",
        "Fmpeg",
        "Fraunhofer's",
        "GOPs",
        "HEVC",
        "Luma",
        "MDCP",
        "Qcomp",
        "Remux",
        "Runspace",
        "Runspaces",
        "Subsampling",
        "Vorbis",
        "bframes",
        "bitrates",
        "chromaloc",
        "cmatch",
        "codec's",
        "colormatrix",
        "colorprim",
        "colorspace",
        "compressionist",
        "copyall",
        "cropdetect",
        "dhdr",
        "downmix",
        "downmixed",
        "downsampling",
        "fdkaac",
        "ffmpeg",
        "ffmpeg's",
        "ffprobe",
        "ghdr",
        "hashtable",
        "iffmpeg",
        "itpffmpeg",
        "kbps",
        "keyint",
        "libfdk",
        "libfdk's",
        "libx",
        "loglevel",
        "mbps",
        "merange",
        "muxed",
        "nokey",
        "pacman",
        "probesize",
        "quantizer",
        "rdoq",
        "runspacefactory",
        "subme",
        "superfast",
        "transcode",
        "transcoded",
        "transcoding",
        "ultrafast",
        "veryfast",
        "veryslow"
    ],

    //powershell settings
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.addWhitespaceAroundPipe": true,
    "powershell.codeFormatting.alignPropertyValuePairs": true,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
    "powershell.codeFormatting.useCorrectCasing": true,

    //git settings
    "git.autofetch": true,
    "git.autofetchPeriod": 240
    
}